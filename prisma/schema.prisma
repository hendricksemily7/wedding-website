// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// A Party represents an invitation - could be a single person, couple, or family
model Party {
  id            String   @id @default(cuid())
  name          String   // Display name for the party, e.g., "The Smith Family" or "John & Jane"
  slug          String   @unique
  guests        Guest[]  // Individual people in the party
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// Individual guest within a party - each can RSVP separately
model Guest {
  id            String   @id @default(cuid())
  partyId       String
  party         Party    @relation(fields: [partyId], references: [id], onDelete: Cascade)
  name          String   // Individual's name
  rsvp          RSVP?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model RSVP {
  id            String      @id @default(cuid())
  guestId       String      @unique
  guest         Guest       @relation(fields: [guestId], references: [id], onDelete: Cascade)
  attending     Boolean
  mealChoice    MealChoice?
  dietaryNotes  String?
  needsShuttle  Boolean     @default(false)
  comments      String?
  respondedAt   DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

enum MealChoice {
  CHICKEN
  SQUASH
  PASTA
}
